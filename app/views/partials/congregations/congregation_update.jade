include ../addons
include ../forms

div.well(ng-controller="CongregationUpdateCtrl")
  +valform('congregationUpdateForm', [
    {
      type: 'scope_select',
      name: 'parent',
      label: "Parent Congregation",
      scope_variable: "congregations",
      scope_iterator: "c.id as c.name for c in congregations",
      required: true,
    },
    {type: 'text', name: 'name', label: "Name", required: true},
    {type: 'text', name: 'color', label: "Color", required: false},
    {type: 'text', name: 'website', label: "Website", required: false},
    [{type: 'tel', name: 'phone', label: "Phone", choices: ['Office']}],
    [{type: 'text', name: 'social_media', label: "Social Media",
      choices: ['Facebook', 'Twitter']
    }],
    [{type: 'location', name: 'address', label: "Address",
      choices: ['Office', 'Church']
    }],
    [{type: 'text', name: 'rooms', label: "Rooms",
      choices: ['Office', 'Worship', 'Meeting Room']
    }]
  ])