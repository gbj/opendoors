include addons

h1= title
p There are {{ obj_list.length }} congregations.
div.well
  div.row
    div.col-sm-8
      div.btn-toolbar
        div.btn-group
          a.btn.btn-primary(href='/people/new') New User
          button.btn.btn-default Import
          a.btn.btn-default(href='/api/people.csv') Export
    div.col-sm-4
      input.form-control(type='search',
                         placeholder="Search",
                         ng-model="search")
  hr
  div.table-responsive
    table.table.table-striped
      thead
        tr.row
          th
          th
          th
          th Name
          th City
      tbody
        tr.row(ng-repeat="congregation in obj_list | filter:search")
          td
            a(ng-click="quickdelete(congregation.slug)")
              +glyphicon("remove")
          td
            a(href='/{{ congregation.slug }}/edit')
              +glyphicon("edit")
          td
            a(href='/{{ congregation.slug }}')
              +glyphicon("info-sign")
          td {{ congregation.name }}
          td
            a(href="mailto:{{ congregation.email[0].value }}")
              {{ congregation.email[0].value }}