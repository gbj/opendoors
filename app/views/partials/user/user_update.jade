include ../addons
include ../forms

div.well(ng-controller="UserUpdateCtrl")
  +valform('userUpdateForm', [
    {type: 'text', name: 'first_name', label: "First Name", required: true},
    {type: 'text', name: 'last_name', label: "Last Name", required: true},
    {type: 'email', name: 'username', label: "Email", required: true},
    {type: 'select', name: 'role', label: "Role",
      options: ['Super-Admin', 'Admin', 'Staff', 'Member']},
    {
      type: 'scope_select',
      name: 'congregation',
      label: "Congregation",
      scope_variable: "congregations",
      scope_iterator: "c.id as c.name for c in congregations",
      required: true,
    }
  ])